@model PriceQuotationModel

@{
    ViewData["Title"] = "Price Quotation";
}

<div class="container">
    <header class="jumbotron bg-success text-center text-white mt-0 rounded">
        <h1 class="mt-3 mb-4 p-5">
            <span class="fas fa-money-bill-wave"></span>&nbsp;
            @ViewBag.Title
        </h1>
    </header>
    <form asp-action="Index" method="post" class="form-horizontal">
        <div class="row form-group mb-4">
            <label asp-for="SalesPrice" class="col-md-3 control-label">
                Subtotal:
            </label>
            <div class="col-md-3">
                <input asp-for="SalesPrice" class="form-control" />
            </div>
            <span asp-validation-for="SalesPrice"
                  class="col text-danger"></span>
        </div>
        <div class="row form-group mb-4">
            <label asp-for="DiscountRate" class="col-md-3 control-label">
                Discount percent:
            </label>
            <div class="col-md-3">
                <input asp-for="DiscountRate" class="form-control" />
            </div>
            <span asp-validation-for="DiscountRate"
                  class="col text-danger"></span>
        </div>
        <div class="row form-group mb-4">
            <label class="col-md-3 col-form-label">Discount Amount:</label>
            <label class="col-md-3">@ViewBag.Discount.ToString("C2")</label>
        </div>
        <div class="row form-group mb-4">
            <label class="col-md-3 col-form-label">Total:</label>
            <label class="col-md-3">@ViewBag.TotalCost.ToString("C2")</label>
        </div>
        <div class="row">
            <div class="col offset-md-3">
                <button type="submit" class="btn bg-success text-white">
                    Calculate
                </button>
                <a asp-action="Index"
                   class="btn bg-success text-white">Clear</a>
            </div>
        </div>
    </form>
</div>

